# ================================================================================
# CREATIVE STUDIO SAAS - ENVIRONMENT VARIABLES
# ================================================================================
# Copy this file to .env and fill in your actual values
# Never commit .env to version control!

# ================================================================================
# SUPABASE CONFIGURATION (REQUIRED)
# ================================================================================
# Get these from: https://supabase.com/dashboard/project/YOUR_PROJECT/settings/api
VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_ANON_KEY=your-anon-key-here

# Server-side Supabase configuration (for backend/BFF)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# ================================================================================
# STOCK API CONFIGURATION (REQUIRED for stock download features)
# ================================================================================
# Contact nehtw.com to obtain an API key
STOCK_API_BASE_URL=https://nehtw.com/api
STOCK_API_KEY=your-stock-api-key-here

# ================================================================================
# GOOGLE GEMINI AI CONFIGURATION (OPTIONAL - for AI image generation)
# ================================================================================
# Get your API key from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your-gemini-api-key-here

# ================================================================================
# SESSION & SECURITY CONFIGURATION (OPTIONAL - has defaults)
# ================================================================================
# Session cookie name
SESSION_COOKIE_NAME=css_bff_session

# Session time-to-live in milliseconds (default: 8 hours)
SESSION_TTL_MS=28800000

# Session refresh threshold in milliseconds (default: 30 minutes)
SESSION_REFRESH_THRESHOLD_MS=1800000

# ================================================================================
# RATE LIMITING (OPTIONAL - has defaults)
# ================================================================================
# Rate limit window in milliseconds (default: 60 seconds)
RATE_LIMIT_WINDOW_MS=60000

# Max requests per window for regular users (default: 120)
RATE_LIMIT_MAX_REQUESTS=120

# Max requests per window for admin endpoints (default: 60)
RATE_LIMIT_ADMIN_MAX_REQUESTS=60

# ================================================================================
# ADMIN CONFIGURATION (OPTIONAL - has defaults)
# ================================================================================
# Default page limit for admin endpoints (default: 50)
ADMIN_DEFAULT_LIMIT=50

# Maximum page limit for admin endpoints (default: 200)
ADMIN_MAX_LIMIT=200

# ================================================================================
# DEVELOPMENT CONFIGURATION
# ================================================================================
# Node environment (development, production, test)
NODE_ENV=development

# Port for the backend server (default: 3000)
PORT=3000

# Target for Vite dev proxy (default: http://localhost:3000)
VITE_DEV_API_TARGET=http://localhost:3000

# Allow unverified JWT in development (default: auto-detected)
# Set to 'true' only in development for testing without full Supabase setup
ALLOW_UNVERIFIED_JWT=false

# ================================================================================
# AUDIT LOGGING (OPTIONAL)
# ================================================================================
# Path to audit log file (default: ./logs/audit.log)
AUDIT_LOG_PATH=./logs/audit.log

# ================================================================================
# PRODUCTION NOTES
# ================================================================================
# 1. For Cloudflare Pages deployment, set VITE_* variables in the dashboard:
#    https://dash.cloudflare.com/YOUR_ACCOUNT/pages
#
# 2. For backend/BFF deployment, ensure all non-VITE_* variables are set
#    in your hosting environment (Railway, Render, Heroku, etc.)
#
# 3. Never expose SUPABASE_SERVICE_ROLE_KEY publicly - it has admin access!
#
# 4. In production, always set NODE_ENV=production
#
# 5. Enable audit logging in production by setting AUDIT_LOG_PATH

